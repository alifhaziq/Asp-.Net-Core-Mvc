@model Personal;
@{
    ViewData["Title"] = "Personal App";
}

<div class="container fluid pb-3 -mt-5">
    <form asp-action="Personal" method="post">
        <hr>
        <h5>Personal / Individual Investor</h5>
        <hr>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <select asp-for="Title" id="titleSelect" class="form-select" aria-label="Default select example" onchange="TitleForm()">
                    <option selected>Title</option>
                    <option value="Tan Sri">Tan Sri</option>
                    <option value="Dato' Sri">Dato' Sri</option>
                    <option value="Datuk Sri">Datuk Sri</option>
                    <option value="Mr.">Mr.</option>
                    <option value="Miss">Miss</option>
                    <option value="Madam">Madam</option>
                    <option value="Others">Others</option>
                </select>
                <br>
                <input type="text" class="form-control" id="otherTitle" name="titleOther" style="display: none;" placeholder="Other, Please Specify">
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="Name" type="text" class="form-control" id="fullname" placeholder=" ">
                    <label for="fullname" class="form-label">FullName <span class="text-danger">*</span></label>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="Nric" type="text" class="form-control" id="nric" placeholder="">
                    <label for="nric" class="form-label">New / Old NRIC <span class="text-danger">*</span></label>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="Dob" type="text" class="form-control" id="dob" placeholder="">
                    <label for="dob" class="form-label">Date of Birth <span class="text-danger">*</span></label>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="Cob" type="text" class="form-control" id="cob" placeholder="">
                    <label for="cob" class="form-label">Country of Birth <span class="text-danger">*</span></label>
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <div class="input">
                    <input asp-for="PhoneNumber" type="text" class="form-control" id="phoneNumber" placeholder="">
                    <label for="cob" class="form-label">Phone Number <span class="text-danger">*</span></label>
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <div class="input">
                    <input asp-for="ContactNo" type="text" class="form-control" id="contactNo" placeholder="">
                    <label for="phoneNumber" class="form-label">Contact No (Home/Office) <span class="text-danger">*</span></label>
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <div class="input">
                    <input asp-for="Email" type="text" class="form-control" id="email" placeholder="">
                    <label for="email" class="form-label">Email address <span class="text-danger">*</span></label>
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <select asp-for="Gender" class="form-select">
                    <option selected>Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
            </div>
            <div class="col-md-3 col-sm-12">
                <select asp-for="Nationality" class="form-select" id="national" onchange="NationalForm()">
                    <option selected>Nationality</option>
                    <option value="malaysia">Malaysia</option>
                    <option value="other">Others</option>
                </select>
                <br>
                <input type="text" class="form-control" id="otherNational" placeholder="Other, Please Specify" style="display: none;">
            </div>
            <div class="col-md-3 col-sm-12">
                <select asp-for="Martial" class="form-select" id="martialStatus" onchange="MartialForm()">
                    <option selected>Martial Status</option>
                    <option value="single">Single</option>
                    <option value="married">Married</option>
                    <option value="other">Others</option>
                </select>
                <br>
                <input type="text" class="form-control" id="married" placeholder="No. of Dependents" style="display: none;">
                <input type="text" class="form-control" id="otherMartial" placeholder="Other, Please Specify" style="display: none;">
            </div>
            <div class="col-md-12 col-sm-12">
                <div class="input">
                    <input asp-for="Address1" type="text" class="form-control" id="address1" placeholder="">
                    <label for="address1" class="form-label">Address 1<span class="text-danger">*</span></label>
                </div>
            </div>
            <div class="col-md-12 col-sm-12">
                <div class="input">
                    <input asp-for="Address2" type="text" class="form-control" id="address2" placeholder="">
                    <label for="address2" class="form-label">Address 2<span class="text-danger">*</span></label>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="Postcode" type="text" class="form-control" id="postcode" placeholder="">
                    <label for="postcode" class="form-label">PostCode <span class="text-danger">*</span></label>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="Town" type="text" class="form-control" id="town" placeholder="">
                    <label for="town" class="form-label">Town <span class="text-danger">*</span></label>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="State" type="text" class="form-control" id="state" placeholder="">
                    <label for="state" class="form-label">State <span class="text-danger">*</span></label>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="Country" type="text" class="form-control" id="country" placeholder="">
                    <label for="country" class="form-label">Country <span class="text-danger">*</span></label>
                </div>
            </div>
        </div>
        <hr>
        <h5>Spouse / Next Of Kin (if Applicable)</h5>
        <hr>
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="SpouseName" type="text" class="form-control" id="spouseName" placeholder="">
                    <label for="spouseName" class="form-label">FullName <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="SpouseNric" type="text" class="form-control" id="spouseNric" placeholder="">
                    <label for="spouseNric" class="form-label">New / Old NRIC <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="Employer" type="text" class="form-control" id="employer" placeholder="">
                    <label for="employer" class="form-label">Name of Employer <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="Occupation" type="text" class="form-control" id="occupation" placeholder="">
                    <label for="occupation" class="form-label">Occupation <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="SpousePhoneNumber" type="text" class="form-control" id="spouseNumberPhone" placeholder="">
                    <label for="spouseNumberPhone" class="form-label">Phone Number <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="ServiceYear" type="text" class="form-control" id="yearService" placeholder="">
                    <label for="yearService" class="form-label">No. Year In Service <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-12 col-sm-12">
                <div class="input">
                    <input asp-for="SpouseAddress1" type="text" class="form-control" id="address1" placeholder="">
                    <label for="address1" class="form-label">Employer's Address 1 <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-12 col-sm-12">
                <div class="input">
                    <input asp-for="SpouseAddress2" type="text" class="form-control" id="address2" placeholder="">
                    <label for="address2" class="form-label">Employer's Address 2 <span class="text-danger"></span></label>
                </div>
            </div>
        </div>
        <hr>
        <h5>Employment / Business</h5>
        <hr>
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="EmploymentName" type="text" class="form-control" id="employmentName" placeholder="">
                    <label for="employmentName" class="form-label">Name Of Employer / Business <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="Nature" type="text" class="form-control" id="nature" placeholder="">
                    <label for="nature" class="form-label">Employer's Nature of Business <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-12 col-sm-12">
                <div class="input">
                    <input asp-for="EmploymentAddress1" type="text" class="form-control" id="address1" placeholder="">
                    <label for="addrees1" class="form-label">Address 1 <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-12 col-sm-12">
                <div class="input">
                    <input asp-for="EmploymentAddress2" type="text" class="form-control" id="address2" placeholder="">
                    <label for="address2" class="form-label">Address 2 <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-2 col-sm-12">
                <div class="input">
                    <input asp-for="PositionHeld" type="text" class="form-control" id="positionHeld" placeholder="">
                    <label for="positionHeld" class="form-label">Position Held <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-2 col-sm-12">
                <div class="input">
                    <input asp-for="EmploymentServiceYear" type="text" class="form-control" id="employmentYearService" placeholder="">
                    <label for="employmentYearService" class="form-label">No.Year In Service <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-8 col-sm-12">
                <div class="input">
                    <input asp-for="MarketValue" type="text" class="form-control" id="marketValue" placeholder="">
                    <label for="marketValue" class="form-label">Current estimated market value of residence (if own property): RM <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <select asp-for="AnnualIncome" class="form-select" aria-label="Default select example">
                    <option selected>Gross Annual Income (RM)</option>
                    <option value="RM20,000 and below">RM20,000 and below</option>
                    <option value="RM20,001 - RM40,000">RM20,001 - RM40,000</option>
                    <option value="RM40,001 - RM60,000">RM40,001 - RM60,000</option>
                    <option value="RM60,001 - RM100,000">RM60,001 - RM100,000</option>
                    <option value="RM100,001 - RM250,000">RM100,001 - RM250,000</option>
                    <option value="RM250,001 - RM500,000">RM250,001 - RM500,000</option>
                    <option value="RM500,001 - RM1,000,000">RM500,001 - RM1,000,000</option>
                    <option value="Above RM1,000,000">Above RM1,000,000</option>
                </select>
            </div>
            <div class="col-md-3 col-sm-12">
                <select asp-for="Funds" class="form-select" aria-label="Default select example">
                    <option selected>Source of Funds</option>
                    <option value="employment">Employment</option>
                    <option value="saving">Savings</option>
                    <option value="businessIncome">Business Income</option>
                    <option value="investmentIncome">Investment Income</option>
                </select>
            </div>
            <div class="col-md-3 col-sm-12">
                <select asp-for="NetWorth" class="form-select" aria-label="Default select example">
                    <option selected>Estimated Net Worth</option>
                    <option value="RM50,000 and below">RM50,000 and below</option>
                    <option value="RM50,001 - RM100,000">RM50,001 - RM100,000</option>
                    <option value="RM100,001 - RM200,000">RM100,001 - RM200,000</option>
                    <option value="RM200,001 - RM500,000">RM200,001 - RM500,000</option>
                    <option value="RM500,001 - RM1,000,000">RM500,001 - RM1,000,000</option>
                    <option value="RM1,000,001 - RM3,000,000">RM1,000,001 - RM3,000,000</option>
                    <option value="Above RM3,000,000">Above RM3,000,000</option>
                </select>
            </div>
            <div class="col-md-3 col-sm-12">
                <select asp-for="SourceWealth" class="form-select" aria-label="Default select example">
                    <option selected>Source of Wealth</option>
                    <option value="employment">Employment</option>
                    <option value="inheritance">Inheritance</option>
                    <option value="businessIncome">Business Income</option>
                    <option value="investmentIncome">Investment Income</option>
                </select>
            </div>
        </div>
        <hr>
        <h5>Bank Particulars (for e-transaction payment purposes)</h5>
        <hr>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <select asp-for="AccountType" class="form-select" aria-label="Default select example">
                    <option selected>Account Type</option>
                    <option value="Saving">Saving Account</option>
                    <option value="Current">Current Account</option>
                </select>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="BankName" type="text" class="form-control" id="bankName" placeholder="">
                    <label for="bankName" class="form-label">Bank Name <span class="text-danger"></span></label>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="input">
                    <input asp-for="NoAccount" type="text" class="form-control" id="accountNumber" placeholder="">
                    <label for="accountNumber" class="form-label">Account No. <span class="text-danger"></span></label>
                </div>
            </div>
        </div>
        <div class="text-right mt-3">
            <button type="submit" class="btn btn-primary">Proceed To Next Step 1/3</button>
        </div>
    </form>
</div>
